<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

    <TextView
            android:text="@{job.title}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:transitionName="title"
            app:layout_collapseMode="parallax"
            tools:text="this is a title test"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="15dp"/>

    <TextView
            android:text="@{job.description}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:transitionName="@string/description"
            app:layout_collapseMode="parallax"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="this is a description test"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            />

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[1]"
            android:id="@+id/imageView"
            android:transitionName="image"
            app:layout_collapseMode="parallax"
            app:layout_constraintTop_toBottomOf="@id/singleMap"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            android:layout_margin="15dp"/>

    <FrameLayout
            android:id="@+id/singleMap"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


    <!--todo centrare il testo-->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:id="@+id/contact_fab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:id="@+id/interestedTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Interested people:"
            style="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintEnd_toEndOf="@+id/description"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginTop="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/interestedList"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/interestedTitle"
            tools:listitem="@layout/item_user"
            tools:itemCount="3"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
